<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
초기 세팅
1. <resultMap id = "~" type = "~~.dto.~DTO"><>
2. <result column = "DB형식"  property = "자바형식"/> PK값은 result 대신 id
3. 쿼리작성
    <select id = "쿼리이름아무거나" resultMap or resultType = "resultMap의 id" or "자료형"><>
    insert, delete, update는 resultMap, resultType 필요없음
4. mapper namespace 경로 작성
-->

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.green.basic_board.mapper.BoardMapper">

<!--  데이터베이스에서 가져올 자료형을 매칭(짝짜꿍)시켜주는 역할(전체데이터X, 하나의 행 데이터O  -->
<!--  컬럼을 DTO로 가져오겠다.  -->
<!--  column : 데이터베이스     property : 자바식  -->
    <resultMap id="board" type="com.green.basic_board.dto.BoardDTO">
        <id column="BOARD_NUM"          property="boardNum"/>
        <result column="TITLE"          property="title"/>
        <result column="WRITER"         property="writer"/>
        <result column="CONTENT"        property="content"/>
        <result column="READ_CNT"       property="readCnt"/>
        <result column="CREATE_DATE"    property="createDate"/>
    </resultMap>


    <!--쿼리-->

    <select id="test1" resultType="String"> <!--실행 결과가 문자열이므로 타입 스트링-->
        SELECT TITLE
        FROM BASIC_BOARD
        WHERE BOARD_NUM = 1
    </select>

    <select id="test2" resultType="int">  <!--실행 결과가 정수배열이지만 한행만 보면 정수이므로 타입 인트-->
        SELECT BOARD_NUM
        FROM BASIC_BOARD

    </select>

    <select id="test3" resultMap="board">  <!--정수, 문자열 섞여있어서 이러한 자료형은 없으므로, class를 만들어야 하니까 resultMap사용-->
        SELECT BOARD_NUM  <!--PK컬럼은 무조건 조회-->
            ,TITLE
            ,CONTENT
            ,WRITER
            ,CREATE_DATE
        FROM BASIC_BOARD
        WHERE BOARD_NUM = #{boardNum} <!--변수일때는 #{}-->
    </select>

    <select id="test4" resultMap="board">
        SELECT BOARD_NUM
            ,TITLE
            ,WRITER
            ,CREATE_DATE
        FROM BASIC_BOARD
        WHERE BOARD_NUM &gt; #{boardNum}
        AND READ_CNT &lt; #{readCnt}
    </select>

    <select id="test5" resultMap="board">
        SELECT *
        FROM BASIC_BOARD
        WHERE BOARD_NUM &gt; #{boardNum}
        AND READ_CNT &lt; #{readCnt}
    </select>

    <!--insert는 resultMap,Type필요없음-->
    <insert id="insertBoard">
        INSERT INTO BASIC_BOARD (
            TITLE
            , WRITER
            , CONTENT
        ) VALUES (
            #{title}
            , #{writer}
            , #{content}
        )
    </insert>

    <delete id="deleteBoard">
        DELETE FROM BASIC_BOARD
        WHERE BOARD_NUM = #{boardNum}
    </delete>

    <update id="updateBoard">
        UPDATE BASIC_BOARD SET
            TITLE = #{title}
            , WRITER = #{writer}
            , CONTENT = #{content}
         WHERE
            BOARD_NUM = #{boardNum}

    </update>





</mapper>































